{
  "name": "@splidejs/splide",
  "version": "4.1.3",
  "description": "Splide is a lightweight, flexible and accessible slider/carousel. No dependencies, no Lighthouse errors.",
  "author": "Naotoshi Fujita",
  "license": "MIT",
  "type": "module",
  "main": "dist/js/splide.cjs.js",
  "module": "dist/js/splide.esm.js",
  "types": "dist/types/index.d.ts",
  "svelte": "dist/js/splide.esm.js",
  "jsdelivr": "dist/js/splide.min.js",
  "keywords": [
    "splide",
    "slider",
    "carousel",
    "slideshow",
    "gallery",
    "lightweight",
    "touch",
    "responsive",
    "typescript"
  ],
  "homepage": "https://splidejs.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Splidejs/splide.git"
  },
  "bugs": {
    "url": "https://github.com/Splidejs/splide/issues"
  },
  "devDependencies": {
    "@swc/core": "^1.3.23",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/uglify-js": "^3.17.1",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "postcss": "^8.4.20",
    "rollup": "^2.79.1",
    "rollup-plugin-dts": "^4.2.3",
    "sass": "^1.57.0",
    "stylelint": "^14.16.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "uglify-js": "^3.17.4",
    "vite": "^3.2.5"
  },
  "scripts": {
    "dev": "vite",
    "build": "ts-node-esm scripts/build-script.ts && ts-node-esm scripts/build-types.ts",
    "check:types": "tsc --project tsconfig.dev.json",
    "jest": "jest",
    "eslint": "eslint src",
    "stylelint": "npx stylelint ./src/css/**/*.scss && npx stylelint ./app/**/*.scss",
    "stylelint:fix": "npx stylelint --fix ./src/css/**/*.scss && npx stylelint --fix ./app/**/*.scss",
    "lint": "pnpm run check:types && pnpm run eslint && npx stylelint ./src/css/**/*.scss",
    "beforecommit": "pnpm run lint && pnpm run jest && npm run build"
  },
  "browserslist": [
    "> 5%"
  ],
  "files": [
    "dist",
    "src/css/"
  ],
  "exports": {
    ".": {
      "require": "./dist/js/splide.cjs.js",
      "import": "./dist/js/splide.esm.js",
      "default": "./dist/js/splide.esm.js"
    },
    "./css": "./dist/css/splide.min.css",
    "./css/core": "./dist/css/splide-core.min.css",
    "./css/*": "./dist/css/themes/splide-*.min.css",
    "./dist/": "./dist/",
    "./src/css/template/": "./src/css/template/",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@splidejs/utils": "^1.1.6"
  }
}
