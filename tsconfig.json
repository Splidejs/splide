{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [ "ESNext", "DOM" ],
    "sourceMap": true,
    "mapRoot": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "declarationDir": "./dist/types",
    "declaration": true
  },
  "include": [
    "src/js/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src/js/**/*.test.ts"
  ]
}
