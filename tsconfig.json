{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [ "ESNext", "DOM" ],
    "sourceMap": true,
    "mapRoot": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "declarationDir": "./dist/types",
    "declaration": true,
    "paths": {
      "@test": [ "./src/test" ],
      "@test/*": [ "./src/test/*" ]
    }
  },
  "include": [
    "src/js/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src/js/**/*.test.ts"
  ],
  "ts-node": {
    "swc": true
  }
}
